<div class="container">
  <div class="title d-flex justify-content-between align-items-center border-bottom">
    <h1>Wikinimous</h1>

    <div class="add">
      <p class="button-action"><i class="fa-solid fa-plus"></i> <%= link_to "Ajoutez un article", articles_new_path %></p>
    </div>
  </div>

  <div class="bg-light bg-gradient card mb-3 p-3">
    <div class="border-bottom pt-3 d-flex justify-content-between align-items-center">
      <h1><%= @article.title %></h1>
        <div class="d-flex gap-5">
          <p class="button-action"><i class="fa-solid fa-pen-to-square"></i> <%= link_to "Editez", edit_path(@article) %></p>
          <p class="button-action"><i class="fa-solid fa-trash-can"></i> <%= link_to "Supprimer", article_path(@article), data: {turbo_method: :delete, turbo_confirm: "Confirmer la supression"} %></p>
          <p class="button-action"><i class="fa-solid fa-rotate-left"></i> <%= link_to "Retour", articles_path %></p>
        </div>
    </div>
    <div class="mt-5">
      <p><%= @article.content %>
    </div>
  </div>
</div>
